<div class="login__modal hidden fixed top-1/2 left-[50%] lg:left-[63%] -translate-x-1/2 -translate-y-1/2 z-10 w-[96%] md:w-full max-w-[320px] md:max-w-[352px]">
  <button
    type="button"
    class="login__modal-close modal__close-button font-bold font-coutureBold absolute bottom-full mb-4 right-0 text-[18px] text-white w-[34px] h-[34px] rounded-full bg-black leading-none flex justify-center items-center cursor-pointer"
    aria-label="{{ 'accessibility.close' | t }}"
  >
    x
  </button>
  <div
    class="border border-[#5a5a5a] bg-white px-[32px] pt-8 max-h-[360px] login__modal-wrapper w-full"
    aria-modal="true"
    role="dialog"
    tabindex="-1"
  >
    <div class="login__modal-heading text-center mb-[40px]">
      <h2 class="font-coutureBold text-[22px] uppercase">CREATE AN ACCOUNT</h2>
    </div>
    <div class="login__modal-body mb-[40px]">
      <p class="text-[13px] uppercase tracking-[0.1em] font-black leading-snug">
        SIGN UP NOW SO YOU CAN ACCESS ALL THE FUNCTIONS RESERVED FOR MEMEBERS ONLY. YOU CAN STILL PURCHASE AS A GUEST
        BUT YOU WILL HAVE TO INTRODUCE YOUR INFO EVERY TIME SINCE IT WONâ€™T BE SAVED TO AN ACCOUNT.
      </p>
    </div>
    <div class="login__modal-footer pb-[25px] text-center">
      <a href="{{ routes.account_login_url }}" class="btn btn_primary !text-2xl w-full mb-1.5 !py-1.5"> SIGN UP NOW </a>
      <a href="#" class="underline text-[13px] font-black login__modal-close"> CONTINUE AS GUEST </a>
    </div>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    var loginOpen = document.querySelectorAll('.cta-login-button'),
      loginModal = document.querySelector('.login__modal'),
      loginClose = document.querySelectorAll('.login__modal-close');

    loginOpen.forEach((button) => {
      button.addEventListener('click', (event) => {
        event.preventDefault();
        loginModal.classList.remove('hidden');
      });
    });

    loginClose.forEach((button) => {
      button.addEventListener('click', () => {
        loginModal.classList.add('hidden');
      });
    });
  });
</script>
