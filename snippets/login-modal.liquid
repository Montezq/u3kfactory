<div class="login__modal hidden top-0 left-0 fixed w-full h-[100dvh] z-[99999]">
  <div class="relative w-full h-full flex pt-[60px] pb-4 overflow-y-auto">
    <div class="my-auto relative left-[50%] lg:left-[62.3%] -translate-x-1/2 z-10 max-w-[300px] md:max-w-[352px]">
      <button
        type="button"
        class="login__modal-close modal__close-button absolute bottom-full mb-4 right-0 w-7 md:w-[34px] h-7 md:h-[34px] rounded-full leading-none flex justify-center items-center cursor-pointer"
        aria-label="{{ 'accessibility.close' | t }}"
      >
        <span class="icon-FULL-ICON-SET-WEBSITE-FINAL_Grey-X-Button text-[28px] md:text-[34px]"
          ><span class="path1"></span><span class="path2"></span
        ></span>
      </button>
      <div
        class="border border-[#5a5a5a] bg-white px-7 md:px-[32px] pt-8 login__modal-wrapper w-full"
        aria-modal="true"
        role="dialog"
        tabindex="-1"
      >
        <div class="login__modal-heading text-center mb-6 md:mb-[40px]">
          <h2 class="font-coutureBold text-lg md:text-[22px] uppercase">
            {{ 'missing_translations.login_modal.create_account' | t }}
          </h2>
        </div>
        <div class="login__modal-body mb-6 md:mb-[40px]">
          <p class="text-[11px] md:text-[13px] uppercase tracking-[0.1em] font-black leading-snug">
            {{ 'missing_translations.login_modal.sign_up' | t }}
          </p>
        </div>
        <div class="login__modal-footer pb-4 md:pb-[25px] text-center">
          <a
            href="{{ routes.account_register_url }}"
            class="btn btn_primary !text-xl md:!text-2xl w-full mb-1.5 !py-1.5"
          >
            {{ 'missing_translations.login_modal.sign_up_now' | t }}
          </a>
          <a href="#" class="underline text-[11px] md:text-[13px] font-black login__modal-close">
            {{ 'missing_translations.login_modal.continue_guest' | t }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function initializeLoginModal() {
    var loginOpen = document.querySelectorAll('.cta-login-button'),
      loginModal = document.querySelector('.login__modal'),
      loginModalBody = document.querySelector('.login__modal-wrapper'),
      bodyEl = document.querySelector('body'),
      loginClose = document.querySelectorAll('.login__modal-close');

    loginOpen.forEach((button) => {
      button.addEventListener('click', (event) => {
        event.preventDefault();
        bodyEl.classList.add('overflow-hidden');
        loginModal.classList.remove('hidden');
      });
    });

    loginClose.forEach((button) => {
      button.addEventListener('click', (event) => {
        event.preventDefault();
        bodyEl.classList.remove('overflow-hidden');
        loginModal.classList.add('hidden');
      });
    });
    loginModal.addEventListener('click', (event) => {
      if (!loginModalBody.contains(event.target)) {
        loginModal.classList.add('hidden');
        bodyEl.classList.remove('overflow-hidden');
      }
    });
  }
  document.addEventListener('DOMContentLoaded', function () {
    initializeLoginModal();
  });
</script>
