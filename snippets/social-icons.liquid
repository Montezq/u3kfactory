      <a href="{{ settings.social_youtube_link }}" target="_blank" class="block">
        <span class="icon-FULL-ICON-SET-WEBSITE-FINAL_YouTube text-[27px] md:text-[32px]"></span>
        <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_pinterest_link != blank -%}
