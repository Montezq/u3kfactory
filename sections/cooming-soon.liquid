    {
      "type": "inline_richtext",
      "id": "subgheading",
      "label": "t:sections.cooming-soon.settings.subheading.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.cooming-soon.presets.name"
    }
  ]
}
{% endschema %}
