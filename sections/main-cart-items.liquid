{{ 'component-cart.css' | asset_url | stylesheet_tag }}
{{ 'component-totals.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-discounts.css' | asset_url | stylesheet_tag }}

{%- unless settings.cart_type == 'drawer' -%}
  <script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
{%- endunless -%}

<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<div class="cart__wrapper flex flex-col relative lg:pr-7" id="main-cart-items" data-id="{{ section.id }}">
  <cart-items class="gradient isolate js-contents{% if cart == empty %} is-empty{% endif %}">
    <div class="page-width">
      <div
        id="bar"
        data-id="{{ section.id }}"
        class="cart__heading ds_element fixed top-[54px] lg:top-[27px] bg-gray-10 lg:bg-white max-lg:duration-300 max-lg:ease-in-out max-lg:py-2"
      >
        <div class="flex justify-between lg:border-b lg:border-b-black lg:pb-[3px] w-full">
          <h1 class=" font-coutureBold text-xl md:text-[29px] tracking-wide leading-none whitespace-nowrap mr-5 max-md:hidden">
            {{ 'sections.cart.title' | t }}
          </h1>
          <div class="totals max-md:w-full">
            <h2
              class="totals__total text-xl md:text-[25px] font-bold leading-none uppercase whitespace-nowrap max-md:flex max-md:justify-between max-md:items-center max-md:w-full"
            >
              <span class="max-md:mr-2">Total </span>
              <span class="totals__total-value header-cart-data"> {{ cart.total_price | money_with_currency }}</span>
            </h2>
          </div>
        </div>
      </div>

      <div class="cart__warnings">
        <div class="flex flex-col items-center cart__empty-wrapper">
          <h1 class="cart__empty-text font-open uppercase text-center tracking-[.28em] font-semibold">
            YOUR CART IS EMPTY
          </h1>
          <img
            class="w-[32vw] md:w-[175px]"
            src="https://cdn.shopify.com/s/files/1/0690/2303/9708/files/Empty_Frame_Icon_461c5870-af56-48de-b902-d75c0c4e32c9.png?v=1717077535"
            width="300"
            height="550"
          >
          <h2 class="cart__empty-text-h2 uppercase text-center tracking-[.28em] font-open font-semibold">
            GO FILL IT UP!
          </h2>
        </div>
      </div>

      <form
        action="{{ routes.cart_url }}"
        class="cart__contents cart__wrapper-items critical-hidden"
        method="post"
        id="cart"
      >
        <div class="cart__items">
          <div>
            {%- if cart != empty -%}
              {%- for item in cart.items -%}
                <div class="cart-item cart-item__block" id="CartItem-{{ item.index | plus: 1 }}">
                  <div class="flex">
                    <div class="cart-item__media">
                      {% if item.image %}
                        <a href="{{ item.url }}" class="cart-item__link" aria-hidden="true" tabindex="-1"> </a>
                        <div class="cart-item__image-container max-md:aspect-square max-md:max-w-[204px] max-md:w-[48vw] md:w-[122px] md:h-[122px]">
                          <img
                            src="{{ item.image | image_url: width: 300 }}"
                            class="w-full h-full object-cover"
                            alt="{{ item.image.alt | escape }}"
                            loading="lazy"
                            width="122"
                            height="{{ 122 | divided_by: item.image.aspect_ratio | ceil }}"
                          >
                        </div>
                      {% endif %}
                    </div>
                    <div class="flex max-md:flex-col w-full ml-[22px] md:pl-2 md:pr-[14px] pt-2 md:pt-1.5 justify-between md:border-b md:border-b-[#8c8c8c]">
                      <div class="pb-3 cart-item__content-left">
                        <div class="mb-5 md:mb-2">
                          <a
                            href="{{ item.url }}"
                            class="uppercase text-lg md:text-[22px] lg:text-[25px] font-bold leading-none inline-block"
                          >
                            {{- item.product.title | escape -}}
                          </a>
                          <p class="text-sm md:text-[17px] italic max-md:leading-none">by {{ item.product.vendor }}</p>
                        </div>
                        <dl class="space-y-1.5">
                          {%- unless item.product.has_only_default_variant -%}
                            {%- for option in item.options_with_values -%}
                              <div class="product-option">
                                <dd class="text-lg md:text-[22px] leading-none max-md:font-bold">
                                  {{ option.value }}
                                </dd>
                              </div>
                            {%- endfor -%}
                          {%- endunless -%}
                          {%- for property in item.properties -%}
                            {%- assign property_first_char = property.first | slice: 0 -%}
                            {%- if property.last != blank and property_first_char != '_' -%}
                              <div class="product-option">
                                <dd class="text-lg md:text-[22px] leading-none max-md:font-bold">
                                  {{ property.last }}
                                </dd>
                              </div>
                            {%- endif -%}
                          {%- endfor -%}
                        </dl>
                      </div>
                      <div class="md:text-right flex flex-col md:justify-between cart-item__content-right">
                        <div class="mb-2 max-md:hidden">
                          <cart-remove-button
                            id="Remove-{{ item.index | plus: 1 }}"
                            data-index="{{ item.index | plus: 1 }}"
                            class="mb-1 inline-block"
                          >
                            <a
                              href="{{ item.url_to_remove }}"
                              class="text-right text-[20px] font-bold whitespace-nowrap"
                              aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                            >
                              Remove <span class="icon-FULL-ICON-SET-WEBSITE-FINAL_Trash-Bin-v3"></span>
                            </a>
                          </cart-remove-button>
                          <quantity-popover>
                            <div class="cart-item__quantity-wrapper quantity-popover-wrapper w-fit ml-auto">
                              <quantity-input class="quantity cart-quantity flex items-center border border-black text-xl leading-none">
                                <button
                                  class="quantity__button w-7 h-7 border-r border-r-black"
                                  name="minus"
                                  type="button"
                                >
                                  <span class="visually-hidden">
                                    {{-
                                      'products.product.quantity.decrease'
                                      | t: product: item.product.title
                                      | escape
                                    -}}
                                  </span>
                                  -
                                </button>
                                <input
                                  class="quantity__input text-center w-[30px] min-w-[30px]"
                                  data-quantity-variant-id="{{ item.variant.id }}"
                                  type="number"
                                  name="updates[]"
                                  readonly
                                  value="{{ item.quantity }}"
                                  {% # theme-check-disable %}
                                  data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                  min="0"
                                  data-min="{{ item.variant.quantity_rule.min }}"
                                  {% if item.variant.quantity_rule.max != null %}
                                    max="{{ item.variant.quantity_rule.max }}"
                                  {% endif %}
                                  step="{{ item.variant.quantity_rule.increment }}"
                                  {% # theme-check-enable %}
                                  aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                  id="Quantity-{{ item.index | plus: 1 }}"
                                  data-index="{{ item.index | plus: 1 }}"
                                >
                                <button
                                  class="quantity__button w-7 h-7 border-l border-l-black"
                                  name="plus"
                                  type="button"
                                >
                                  <span class="visually-hidden">
                                    {{-
                                      'products.product.quantity.increase'
                                      | t: product: item.product.title
                                      | escape
                                    -}}
                                  </span>
                                  +
                                </button>
                              </quantity-input>
                            </div>
                          </quantity-popover>
                        </div>
                        <div class="md:mb-1">
                          <p class="text-lg md:text-[22px] lg:text-[25px] font-bold md:text-right leading-none mb-1.5 whitespace-nowrap">
                            {{ item.price | money_with_currency }}
                          </p>
                          <p class="text-[11px] md:text-[13px] font-bold md:text-right leading-none italic md:whitespace-nowrap">
                            * VAT INCLUDED / EXCLUDED <br class="md:hidden">
                            SHIPPING COST
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="md:hidden px-1 mt-3">
                    <div class="border-b border-b-[#8c8c8c] pb-5 flex justify-between">
                      <quantity-popover>
                        <div class="cart-item__quantity-wrapper quantity-popover-wrapper w-fit ml-auto">
                          <quantity-input class="quantity cart-quantity flex items-center border border-black text-xl leading-none">
                            <button
                              class="quantity__button w-7 h-7 border-r border-r-black"
                              name="minus"
                              type="button"
                            >
                              <span class="visually-hidden">
                                {{- 'products.product.quantity.decrease' | t: product: item.product.title | escape -}}
                              </span>
                              -
                            </button>
                            <input
                              class="quantity__input text-center w-[30px] min-w-[30px]"
                              data-quantity-variant-id="{{ item.variant.id }}"
                              type="number"
                              name="updates[]"
                              readonly
                              value="{{ item.quantity }}"
                              {% # theme-check-disable %}
                              data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                              min="0"
                              data-min="{{ item.variant.quantity_rule.min }}"
                              {% if item.variant.quantity_rule.max != null %}
                                max="{{ item.variant.quantity_rule.max }}"
                              {% endif %}
                              step="{{ item.variant.quantity_rule.increment }}"
                              {% # theme-check-enable %}
                              aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                              id="Quantity-{{ item.index | plus: 1 }}"
                              data-index="{{ item.index | plus: 1 }}"
                            >
                            <button
                              class="quantity__button w-7 h-7 border-l border-l-black"
                              name="plus"
                              type="button"
                            >
                              <span class="visually-hidden">
                                {{- 'products.product.quantity.increase' | t: product: item.product.title | escape -}}
                              </span>
                              +
                            </button>
                          </quantity-input>
                        </div>
                      </quantity-popover>
                      <cart-remove-button
                        id="Remove-{{ item.index | plus: 1 }}"
                        data-index="{{ item.index | plus: 1 }}"
                      >
                        <a
                          href="{{ item.url_to_remove }}"
                          class="text-right text-[20px] font-bold whitespace-nowrap"
                          aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                        >
                          <span class="icon-FULL-ICON-SET-WEBSITE-FINAL_Trash-Bin-v3"></span>
                        </a>
                      </cart-remove-button>
                    </div>
                  </div>
                </div>
              {%- endfor -%}
            {%- endif -%}
          </div>
        </div>

        <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
        <p
          class="visually-hidden"
          id="shopping-cart-line-item-status"
          aria-live="polite"
          aria-hidden="true"
          role="status"
        >
          {{ 'accessibility.loading' | t }}
        </p>
      </form>
    </div>
  </cart-items>
</div>
{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": []
}
{% endschema %}
