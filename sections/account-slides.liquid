                      {%- if section.settings.preferences_image.width >= 1000 -%}{{ section.settings.preferences_image | image_url: width: 1000 }} 1000w,{%- endif -%}
                      {%- if section.settings.preferences_image.width >= 1500 -%}{{ section.settings.preferences_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                      {%- if section.settings.preferences_image.width >= 3000 -%}{{ section.settings.preferences_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                      {{ section.settings.preferences_image | image_url }} {{ section.settings.preferences_image.width }}w
                    "
                    src="{{ section.settings.preferences_image | image_url: width: 1500 }}"
                    sizes="
                      (min-width: {{ settings.page_width }}px) 80vw,
                      (min-width: 750px) calc(100vw - 1rem),
                      calc(100vw - 8px)
                    "
                    alt="{{ section.settings.preferences_image.alt | escape }}"
                    height="{{ section.settings.preferences_image.height }}"
                    width="{{ section.settings.preferences_image.width }}"
                    loading="lazy"
                    class="w-full h-full object-cover"
                  >
                {%- endif -%}
              </div>
              <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full">
                <h3 class="font-helveticaThinCond card-collection__title text-4xl md:text-5xl lg:text-6xl 2xl:text-[74px] tracking-widest text-center text-white uppercase font-thin">
                  {{ 'missing_translations.preferences' | t }}
