                    srcset="
                      {%- if section.settings.orders_image.width >= 165 -%}{{ section.settings.orders_image | image_url: width: 165 }} 165w,{%- endif -%}
                      {%- if section.settings.orders_image.width >= 330 -%}{{ section.settings.orders_image | image_url: width: 330 }} 330w,{%- endif -%}
                      {%- if section.settings.orders_image.width >= 535 -%}{{ section.settings.orders_image | image_url: width: 535 }} 535w,{%- endif -%}
                      {%- if section.settings.orders_image.width >= 750 -%}{{ section.settings.orders_image | image_url: width: 750 }} 750w,{%- endif -%}
                      {%- if section.settings.orders_image.width >= 1000 -%}{{ section.settings.orders_image | image_url: width: 1000 }} 1000w,{%- endif -%}
                      {%- if section.settings.orders_image.width >= 1500 -%}{{ section.settings.orders_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                      {%- if section.settings.orders_image.width >= 3000 -%}{{ section.settings.orders_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                      {{ section.settings.orders_image | image_url }} {{ section.settings.orders_image.width }}w
                    "
                    src="{{ section.settings.orders_image | image_url: width: 1500 }}"
                    sizes="
                      (min-width: {{ settings.page_width }}px) 80vw,
                      (min-width: 750px) calc(100vw - 1rem),
                      calc(100vw - 8px)
                    "
                    alt="{{ section.settings.orders_image.alt | escape }}"
                    height="{{ section.settings.orders_image.height }}"
                    width="{{ section.settings.orders_image.width }}"
                    loading="lazy"
                    class="w-full h-full object-cover"
                  >
