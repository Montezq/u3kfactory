                      {%- if section.settings.preferences_image.width >= 165 -%}{{ section.settings.preferences_image | image_url: width: 165 }} 165w,{%- endif -%}
                      {%- if section.settings.preferences_image.width >= 330 -%}{{ section.settings.preferences_image | image_url: width: 330 }} 330w,{%- endif -%}
