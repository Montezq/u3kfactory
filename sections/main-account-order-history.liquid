{{ 'customer.css' | asset_url | stylesheet_tag }}

<div class="customer order max-lg:px-4">
  <div
    id="bar"
    class="ds_element dissapearing main-account__heading max-lg:py-3 fixed top-[67px] lg:top-[27px] bg-gray-10 lg:bg-white max-md:duration-300 max-md:ease-in-out flex justify-center"
  >
    <h1 class="font-coutureBold text-2xl md:text-3xl uppercase text-center">My Orders</h1>
  </div>
  <div class="my-account__body max-md:pb-6">
    <ul>
      {%- for order in customer.orders -%}
        <li class="order">
          <div class="order__header p-1.5 border flex justify-between">
            <div>
              <p class="leading-none uppercase mb-1 font-bold">Order No. {{ order.order_number }}</p>
              <p class="leading-none uppercase text-xs font-bold">Status : {{ order.fulfillment_status_label }}</p>
            </div>
            <div class="text-right">
              <p class="leading-none uppercase font-bold mb-1">Total {{ order.total_net_amount | money }}</p>
              <p class="leading-none text-xs font-bold">{{ order.created_at | date: '%Y/%m/%d' }}</p>
            </div>
          </div>
          <ul class="order__body">
            {% for item in order.line_items %}
              <li class="order__body-item">
                <div class="cart-item cart-item__block" id="CartItem-{{ item.index | plus: 1 }}">
                  <div class="flex">
                    <div class="cart-item__media">
                      {% if item.image %}
                        <a href="{{ item.url }}" class="cart-item__link" aria-hidden="true" tabindex="-1"> </a>
                        <div class="cart-item__image-container max-md:aspect-square max-md:max-w-[204px] max-md:w-[48vw] md:w-[122px] md:h-[122px]">
                          <img
                            src="{{ item.image | image_url: width: 300 }}"
                            class="w-full h-full object-cover"
                            alt="{{ item.image.alt | escape }}"
                            loading="lazy"
                            width="122"
                            height="{{ 122 | divided_by: item.image.aspect_ratio | ceil }}"
                          >
                        </div>
                      {% endif %}
                    </div>
                    <div class="flex max-md:flex-col w-full ml-[22px] md:pl-2 md:pr-[14px] pt-2 md:pt-1.5 justify-between md:border-b md:border-b-[#8c8c8c]">
                      <div class="pb-3 cart-item__content-left">
                        <div class="mb-5 md:mb-2">
                          <a
                            href="{{ item.url }}"
                            class="uppercase text-[22px] lg:text-[25px] font-bold leading-none inline-block"
                          >
                            {{- item.product.title | escape -}}
                          </a>
                          <p class="text-[15px] md:text-[17px] italic max-md:leading-none">
                            by {{ item.product.vendor }}
                          </p>
                        </div>
                        <dl class="space-y-1.5">
                          {%- unless item.product.has_only_default_variant -%}
                            {%- for option in item.options_with_values -%}
                              <div class="product-option">
                                <dd class="text-[22px] leading-none max-md:font-bold">
                                  {{ option.value }}
                                </dd>
                              </div>
                            {%- endfor -%}
                          {%- endunless -%}
                          {%- for property in item.properties -%}
                            {%- assign property_first_char = property.first | slice: 0 -%}
                            {%- if property.last != blank and property_first_char != '_' -%}
                              <div class="product-option">
                                <dd class="text-[22px] leading-none max-md:font-bold">
                                  {{ property.last }}
                                </dd>
                              </div>
                            {%- endif -%}
                          {%- endfor -%}
                        </dl>
                      </div>
                      <div class="md:text-right flex flex-col md:justify-between cart-item__content-right">
                        <div class="mb-2 max-md:hidden">
                          <cart-remove-button
                            id="Remove-{{ item.index | plus: 1 }}"
                            data-index="{{ item.index | plus: 1 }}"
                          >
                            <a
                              href="{{ item.url_to_remove }}"
                              class="text-right text-[20px] font-bold whitespace-nowrap"
                              aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                            >
                              Remove <span class="font-coutureBold text-[15px] font-bold">x</span>
                            </a>
                          </cart-remove-button>
                          <button class="flex items-center text-right font-bold text-[20px] ml-auto whitespace-nowrap">
                            Save for later
                            <span
                              class="icon-FULL-ICON-SET-WEBSITE-FINAL_All-Products-Heart-not-Saved-v2 text-[14px] ml-0.5"
                            ></span>
                          </button>
                        </div>
                        <div class="md:mb-1">
                          <p class="text-[22px] lg:text-[25px] font-bold md:text-right leading-none mb-1.5 whitespace-nowrap">
                            {{ item.price | money_with_currency }}
                          </p>
                          <p class="text-[13px] font-bold md:text-right leading-none italic md:whitespace-nowrap">
                            * VAT INCLUDED / EXCLUDED <br class="md:hidden">
                            SHIPPING COST
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="md:hidden px-1 mt-3">
                    <div class="border-b border-b-[#8c8c8c] pb-[9px]">
                      <button class="flex items-center text-right font-bold text-[21px] md:text-[20px] whitespace-nowrap max-md:mb-[3px]">
                        <span
                          class="icon-FULL-ICON-SET-WEBSITE-FINAL_All-Products-Heart-not-Saved-v2 text-[14px] max-md:mr-4 md:ml-0.5"
                        ></span>
                        save for later
                      </button>
                      <cart-remove-button
                        id="Remove-{{ item.index | plus: 1 }}"
                        data-index="{{ item.index | plus: 1 }}"
                      >
                        <a
                          href="{{ item.url_to_remove }}"
                          class="text-right text-[20px] font-bold whitespace-nowrap"
                          aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                        >
                          <span class="font-coutureBold text-[15px] font-bold max-md:mr-4">x</span> remove
                        </a>
                      </cart-remove-button>
                    </div>
                  </div>
                </div>
              </li>
            {%- endfor -%}
          </ul>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-order.name",
  "settings": []
}
{% endschema %}
